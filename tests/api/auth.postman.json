{
  "info": {
    "name": "Auth API",
    "description": "Authentication service API tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "url",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{url}}/health",
          "host": ["{{url}}"],
          "path": ["health"]
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@test.com\",\n  \"password\": \"1234\"\n}"
        },
        "url": {
          "raw": "{{url}}/login",
          "host": ["{{url}}"],
          "path": ["login"]
        }
      },
      "response": []
    },
    {
      "name": "Login - Invalid Credentials",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"wrong@test.com\",\n  \"password\": \"wrong\"\n}"
        },
        "url": {
          "raw": "{{url}}/login",
          "host": ["{{url}}"],
          "path": ["login"]
        }
      },
      "response": []
    }
  ]
}
